generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Song {
    id       Int      @id @default(autoincrement())
    title    String?
    artist   String?
    filename String   @unique
    image    Boolean
    modified DateTime @default(now())
    marker   Marker[]
    link     Link?
}

model Marker {
    id     Int   @id @default(autoincrement())
    songId Int
    marker Float
    song   Song  @relation(fields: [songId], references: [id], onDelete: Cascade)
}

model Link {
    id      Int      @id @default(autoincrement())
    token   String   @unique
    expires DateTime
    songId  Int      @unique
    song    Song     @relation(fields: [songId], references: [id], onDelete: Cascade)
}
